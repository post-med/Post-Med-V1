                <option>21:00</option>
                <option>21:30</option>
                <option>22:00</option>
                <option>22:30</option>
                <option>23:00</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}
      <br><br>
      <div class="col">
        <button type="submit" class="form-control btn btn-primary" style="width: 30%;">Submit</button>
      </div>
    </form>
  </div>
</div>