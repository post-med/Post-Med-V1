<div style="height: 100vh;">
  <h1>Hey Doctor</h1>
  <br><br>
  <h2>Add an activity here</h2>
  <br><br>
  <div class="container-fluid row" style="justify-content: center">
    <form action="/auth/addActivity" method="POST" id="add-act" style="width: 60vw;">
      <div class="form-group row">
        <div class="col-md-6">
          <label for="">Type of Activity</label>
          <select class="form-control" name="category">
            <option selected>select</option>
            <option>medication</option>
            <option>doctor</option>
            <option>course</option>
            <option>work</option>
          </select>
        </div>
        <div class="col-md-6">
          <label for="">Add a Comment</label>
          <input class="form-control" type="text" name="info" placeholder="add a comment">
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-6">
          <div class="row float-left">
            <div class="col-md-6">
              <label for="">Start Date</label>
              <input type="date" name="stDa" id="">
            </div>
            <div class="col-md-6">
              <label for="">Time</label>
              <select class="form-control" name="stTi">
                <option selected>select</option>
