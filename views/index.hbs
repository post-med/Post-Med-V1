    {{!-- <h2>Login</h2> --}}
    <form action="/login" method="POST" id="login-form">
      <div class="row">
        <div class="col-md-5" style="padding-left: 0">
          <input type="text" class="form-control" placeholder="Email" name="email">
        </div>
        <div class="col-md-5" style="padding-left: 0">
          <input type="password" class="form-control" placeholder="Password" name="password">
        </div>
        <div class="col-md-2" style="padding-left: 0">
          <button type="submit" class="form-control btn btn-primary">Login</button>
        </div>
        <br>
        {{#if message }}
        <div class="error-message">{{ message }}</div>
        {{/if}}
      </div>
    </form>
    <button id="callSignup">Sign Up</button>
  </div>

  <div class="container col-md-6" id="right-side">
    <div class="ml-auto col-md-6" style="margin-top: 20%">

      <form action="/signup" method="POST" id="signup-form" style="display: none;">
        <h2>Signup</h2>
        <div class="row">
          <input class="form-control" type="text" name="firstName" placeholder="Firstname">
        </div>
        <br>
        <div class="row">
          <input class="form-control" type="text" name="lastName" placeholder="Lastname">
        </div>
        <br>
        <div class="row">
          <select class="form-control" name="country">
            <option selected>Country</option>
            <option>United States</option>
            <option>Germany</option>
            <option>France</option>
            <option>Spain</option>
            <option>Italy</option>
          </select>
        </div>
        <br>
        <div class="row">
          <div class="col-md-6 p-0">
            {{!-- <label for="signup-birthdate"></label> --}}
            <input type="text" class="form-control" pattern="([12]\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[12]\d|3[01]))"
              id="signup-birthdate" placeholder="B:YYYY-MM-DD" name="birthDate">
          </div>
          <div class="col-md-5 p-0 ml-auto">
            {{!-- <label for="signup-gender"></label> --}}
            <select class="form-control" id="signup-gender" name="gender">
              <option selected>gender</option>
              <option>male</option>
              <option>female</option>
              <option>other</option>
            </select>
          </div>
        </div>
        <br>
        <div class="row">
          <input class="form-control" type="text" placeholder="Email" name="email">
        </div>
        <br>
        <div class="row">
          <input class="form-control" type="password" name="password" placeholder="password">
        </div>
        {{#if signMessage }}
        <div class="error-message">{{ signMessage }}</div>
        {{/if}}
        <br><br>
        <div class="row">
          <button type="submit" class="form-control btn btn-primary">Create account</button>
        </div>
        <br>
        <div class="row">
          <a href="/auth/signup">Sign up as a doctor?</a>
        </div>
      </form>
    </div>
  </div>
</div>


